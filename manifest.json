{
  "manifest_version": 2,

  "name": "Youtube Spoiler Blocker Plugin",
  "description": "This extension will prevent Youtube from showing thumbnails of spoilers",
  "version": "1.0",
  "background": {
      "scripts": ["background.js","js/jquery-3.2.1.min.js"],
      "persistent": false
    },
    "page_action" :
    {
      "default_icon" : "images/icon-19.png",
      "default_popup" : "popup.html",
      "default_title" : "Toggle YouTube images"
    },
    "permissions" : [
      "declarativeContent",
      "activeTab"
    ],
    "content_scripts":
    [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["js/jquery-3.2.1.min.js","content.js"],
            "run_at": "document_end"
        }
    ],
    "icons" : {
      "48" : "images/icon-48.png",
      "128" : "images/icon-128.png"
    }
  }